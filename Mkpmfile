include $(MKPM)/mkpm
include mkpm.mk
-include $(MKPM)/gnu
-include main.mk

PACK_DIR := $(MKPM_TMP)/pack

$(info GITLAB_TOKEN $(call gitlab_token))
$(info NPM_AUTH_TOKEN $(NPM_AUTH_TOKEN))

.PHONY: info
info:
	@$(ENV)

.PHONY: clean
clean:
	@$(MKCHAIN_CLEAN)
	@$(GIT) clean -fXd \
		$(MKPM_GIT_CLEAN_FLAGS)

.PHONY: purge
purge: clean
	@$(GIT) clean -fXd
